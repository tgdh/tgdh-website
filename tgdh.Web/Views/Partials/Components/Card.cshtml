@inherits UmbracoViewPage<ICardBase>
@{
	if(string.IsNullOrWhiteSpace(Model.Url)) {
		return;
	}
}
<article class="c-card">
    <a href="@Model.Url" class="c-card__link">
        @if (Model.CoverImage != null)
        {
            var imageUrl = Url.GetCropUrl(Model.CoverImage, cropAlias:  "21:9", width: 1000, quality: 85, htmlEncode: false).ToString();

            <div class="c-card__image-wrap o-aspect--21-9">
                <img src="@imageUrl" class="c-card__image" alt="@Model.Headline"/>
            </div>
        }

        <div class="c-card__content">
			@if(!String.IsNullOrWhiteSpace(Model.Headline))
			{
	            <h2 class="c-card__headline u-epsilon">@Model.Headline</h2>
			}
        </div>
    </a>
</article>
