@inherits UmbracoViewPage<ProfileCardViewModel>
@{
	var image = Umbraco.TypedMedia(Model.ImageId);
	if( image == null ) {
		return;
	}

	var imageUrlLow = Url.GetCropUrl(image, cropAlias:  "1:1", width: 600, quality: 15, htmlEncode: false).ToString();
	var imageUrlHigh = Url.GetCropUrl(image, cropAlias:  "1:1", width: 600, quality: 95, htmlEncode: false).ToString();
}
<article class="c-profile-card @Model.ModifierClass">
	<div class="c-profile-card__image-wrap o-aspect--1-1">
	    <img src="@imageUrlLow" data-src="imageUrlHigh" class="c-profile-card__image js-lazyloaded" alt="">
	</div>
    <h3 class="c-profile-card__headline">@Model.FirstName @Model.LastName</h3>
    <p class="c-profile-card__subtitle u-font-sec">Job title</p>
</article>
